<div class="row">
  <div class="small-12 columns">
    <h1><%= @user.name %></h1>

    <% if @user.photo.present? %>
      <%= image_tag @user.photo.url(:medium) %>
    <% end %>

    <% if @user.bio.present? %>
      <p><%= @user.bio %></p>
    <% end %>

    <ul>
      <% if @user.website.present? %>
        <li>Location: <%= @user.website %></li>
      <% end %>

      <% if @user.twitter.present? %>
        <li>Twitter: <%= link_to @user.twitter, "https://twitter.com/#{@user.twitter}" %></li>
      <% end %>

      <% if @user.github.present? %>
        <li>GitHub: <%= link_to @user.github, "https://github.com/#{@user.github}" %></li>
      <% end %>
    </ul>

    <%= link_to "Edit Profile", edit_user_path(@user), class: "button small" %>
  </div>
</div>

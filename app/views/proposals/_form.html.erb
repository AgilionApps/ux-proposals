<%= simple_form_for @proposal do |f| %>
  <div class="row">
    <div class="small-12 medium-6 columns">
      <h3>About the Talk</h3>

      <%= f.input :title, placeholder: 'It sets the tone. Make it great!' %>
      <%= f.input :abstract, placeholder: 'In 200 words or less (suggested), tell us what your talk is about. Please leave out identifying information.' %>
      <%= f.input :notes, placeholder: 'What should we know about your talk that is not in the abstract? Please leave out identifying information.' %>
      <%= f.input :pitch, placeholder: 'Why should we pick you?' %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 medium-6 columns">
      <hr />
      <h3>About You</h3>
    </div>
  </div>

  <div class="row">
    <div class="small-12 medium-6 columns">

      <%= f.simple_fields_for :user, @proposal.user do |user| %>
        <%= render partial: 'users/fields', locals: {f: user} %>
      <% end %>
    </div>

    <div class="small-12 medium-6 columns">
      <% if @proposal.user.photo.present? %>
        <h5>Your Current Photo</h5>
        <%= image_tag @proposal.user.photo.url(:medium) %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 medium-6 columns">
      <%= f.button :submit, button_text, class: 'button' %>
    </div>
  </div>
<% end %>
